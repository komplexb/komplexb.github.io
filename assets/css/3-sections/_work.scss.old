.section-work {
    overflow-x: hidden;
    h3 {
        padding-top: 0;
    }
}

.work-belt {
    width: 200%;
    background: pink;
    position: relative;
    left: 0%;
    @include transition(all 800ms);
}

.thumb-wrap, .work-wrap {
    width: 50%;
    float: left;
}

.thumb-container {
    max-width: 960px;
    margin: 0px auto;
//    @include clearfix;
    
    .thumb-unit {
        display:block;
        width: 25%;        
        float: left;
        padding-top: 15%;
        position: relative;
        overflow: hidden;
        @include perspective(300);
        cursor: pointer;
        background: {
            position: center center;
            repeat: no-repeat;
            size: cover;
        }
        
        @media screen and (max-width: 760px) {
            width: 50%;
            padding: 26%;
        }
        
        .thumb-overlay {
            @include position(absolute, 0% 0px null 0px); //bourbon mixin
            height: 100%;
            background: fade-out($accent, 0.1);
//            background: rgba(255,255,255,.2);
            text-align: center;
            @include transition(); //bourbon mixin
            @include display(flex); //bourbon mixin
            @include align-items(center); //bourbon mixin
            @include justify-content(space-around); //bourbon mixin
            @include transform(rotateX(90deg));
            
            strong {
                padding: 0 20px;
                display: block;
                color: white;
                font: {
                    weight: 300;
                    size: 24px;
                }
                text-transform: uppercase;
                line-height: 1.2;
            }
            
            svg {
                @include size(40px);
                path {
                    fill: white;
                }
            }
        }
        &:hover {
//            @include filter(blur(3px));
        }
        &:hover .thumb-overlay {
//            @include position(absolute, 0% 0px null 0px);
            top: 0%;
            @include transform(rotateX(0deg));
       
        }
    }
}

.work-container {
    max-width: 600px;
    margin: 0px auto;
    position: relative;
    display: none;
    
    h4 {
        color: $accent;
        text-transform: uppercase;
        line-height: 1.2;
        font: {
            weight: 300;
            size: 24px;
        }        
    }
    
    img {
        max-width: 100%;
        margin-bottom: 20px;
    }
    
    .work-return {
        @include size(40px);
        cursor: pointer;
        opacity: 0.5;
        @include position(absolute, -8px null null -60px);
        
        path {
            fill: rgba(0,0,0,0.4);
        }
        
        &:hover {
            opacity: 1;
        }
    }
}

@media (max-width: 740px) {
    .work-container {
        .work-return {
            left: 0px;
        }
        h4 {
            margin-left: 60px;
        }
    }
}
        